<header>
  <nav class="centred-text">
    <a href="/" class="nav-item">Reload/Reroll</a>
    <a href="/stats" class="nav-item">Stats</a>
    <a href="/inventory" class="nav-item">Inventory</a>
    <a href="/bookmark" class="nav-item accented-nav">Bookmark</a>
    <a href="/help" class="nav-item">Help</a>
  </nav>
</header>

<main>


  <h1 class="centred-text">Fighting Fantasy Companion</h1>
  
  <div class="dice-container width-container">
    <img src="/images/<%= DICE_ICONS[@die1] %>" id="left-die" alt="A 3D six-sided die facing with the six side up">
    <img src="/images/<%= DICE_ICONS[@die2] %>" id="right-die" alt="A 3D six-sided die facing with the six side up">
    <h2 class="die-roll-result"> <%= @die1 %> </h2>
    <h2 class="die-roll-result"> <%= @die2 %> </h2>
  </div>

  <section class="width-container centred-text">
    <h2> Current Book Section: </h2>
    <h2 class="bookmark-value"> <%= session[:bookmark] %> </h2>
  </section>

  <section class="width-container centred-text">
    <h2 class="centred-text"> Update Bookmark:</h2>
    <form action="/bookmark" method="post" class="centred-text" name="updated_bookmark">
      <div class="centred-text"><input name="updated_bookmark" type="number" value="<%= session[:bookmark]%>" min="1" max="400"/></div>
      <button class="reversed-colour-scheme" type="submit">Update Bookmark</button>
    </form>
  </section>

</main>